  style.
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
    }
    /* Firefox */
    input[type=number] {
    -moz-appearance: textfield;
    }
    /* ========== */
    .input-icons {
    width: 100%;
    margin-bottom: 20px;
    }
    .input-icons input {
    outline: 0;
    background: rgb(243, 216, 189);
    width: 100%;
    border: 0;
    margin: 0 0 1px;
    padding: 15px;
    box-sizing: border-box;
    font-size: 16px;
    }
    .input-icons i {
    position: absolute;
    margin-bottom: 15px;
    visibility: hidden;
    ;
    }
    .icon {
    padding: 13px;
    color: red;
    min-width: 50px;
    text-align: right;
    right: 50px;
    }
    .input-field {
    width: 100%;
    text-align: left;
    }
    .invalid-feedback {
    margin-top: 1px;
    font-size: 12px;
    text-align: left;
    color: red;
    visibility: hidden;
    }
    .invalid>i,
    .invalid>.invalid-feedback {
    visibility: visible;
    }
    .invalid>input {
    border: 1px solid red;
    }
